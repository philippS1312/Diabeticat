FROM postgres:13.4

ENV POSTGRES_HOST customer-db
ENV POSTGRES_USER postgres
ENV POSTGRES_PASSWORD postgres

RUN localedef -i de_DE -c -f UTF-8 -A \
/usr/share/locale/locale.alias de_DE.UTF-8
ENV LANG de_DE.utf-8

EXPOSE 54323

COPY dvd-rental-customer.sql /docker-entrypoint-initdb.d/

